#!/usr/bin/env bash
set -euo pipefail

scanDir() {
	declare -A objs
	for f in "$1"/*; do
		n=$(basename "$f")
		if [[ -d "$f" ]]; then
			obj=$(scanDir "$f")
			objs["${n}/"]="$obj"
		elif [[ -f "$f" ]]; then
			obj=$(jq --null-input \
				--argjson size "$(stat -c%s "$f")" \
				'{ $size }')
			objs["$n"]="$obj"
		else
			echo "Skipping $f since it's neither a file nor a directory" >&2
		fi
	done
	jsonobj objs
}

basename() {
	echo "${1##*/}"
}

# jsonobj varname
jsonobj() {
	args=()
	keys=()

	declare -n obj=$1
	i=0
	for k in "${!obj[@]}"; do
		v="${obj[$k]}"
		args+=(--argjson "v$i" "$v")
		keys+=("\"$k\": \$v$i")
		i=$((i + 1))
	done

	jq --null-input "${args[@]}" "{ $(printf "%s, " "${keys[@]}") }"
}

main() {
	if [[ $# -ne 1 ]]; then
		echo "Usage: jsonfs <path>"
		exit 1
	fi

	if [[ "$1/" != public/* ]]; then
		echo "Path must be in public/" >&2
		exit 1
	fi

	cd "public"

	dir=${1#public/}
	if [[ "$dir" == "" ]]; then
		dir="."
	fi
	
	shopt -s dotglob
	tree=$(scanDir "$dir")

	jq --null-input \
		--arg base "$dir" \
		--argjson tree "$tree" \
		'{ $base, $tree }'
}

main "$@"
